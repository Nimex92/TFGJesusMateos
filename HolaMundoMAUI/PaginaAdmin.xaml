                        <HorizontalStackLayout>
                            <ImageButton 
                                Source="addtareas.png"
                                VerticalOptions="Center"
                                x:Name="BtnAnadeDias"
                                Clicked="AddDaysButton_Clicked"/>
                            <Label Text="Añadir Dias al calendario"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </HorizontalStackLayout>
                    <Button
                            x:Name="VolverATrabajadores"
                            Text="Volver"
