                            <DataTemplate>
                                <ViewCell>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Label 
                                           WidthRequest="150"
                                           VerticalOptions="Center"
                                           Text="{Binding Reason}" 
                                           Margin="-380,0,0,0" 
                                           FontSize="16"
                                           HeightRequest="30"/>
                                        <Label 
                                           WidthRequest="150"
                                           VerticalOptions="Center"
                                           Text="{Binding Date}" 
                                           Margin="40,0,0,0" 
                                           FontSize="16"/>
                                        <Label 
                                           WidthRequest="150"
                                           VerticalOptions="Center"
                                           Text="{Binding Enjoyed}" 
                                           Margin="470,0,0,0" 
                                           FontSize="16"/>
                                       
                                        <ImageButton
                                           Source="editar.png"  
                                           WidthRequest="30"
                                           HeightRequest="30"
                                           VerticalOptions="Center"
                                           Margin="580,0,0,0"
                                           x:Name="BotonActualizaDias"
                                           Clicked="ModifyDaysButton_Clicked"/>
                                        <ImageButton
                                           Source="borrar.png"
                                           WidthRequest="30"
                                           HeightRequest="30"
                                           VerticalOptions="Center"
                                           Margin="660,0,0,0"
                                           x:Name="BotonBorrarDias"
                                           Clicked="DeleteDaysButton_Clicked"/>
