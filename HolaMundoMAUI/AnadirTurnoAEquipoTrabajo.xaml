<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HolaMundoMAUI.AnadirTurnoEquipoTrabajo"
             Title="Añadir zonas a grupo de trabajo"
             BackgroundColor="White">
    <StackLayout>
        <Label  
                Text="Añadir turnos a equipo de trabajo"
                FontSize="30"
                FontAttributes="Bold"
                HorizontalTextAlignment="Center"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                x:Name="LabelTitulo"/>
        <StackLayout 
                BackgroundColor="Black" 
                WidthRequest="300" 
                HeightRequest="2"
                Margin="0,5,0,0"
                HorizontalOptions="Center"/>
        <StackLayout
            HorizontalOptions="Center"
            WidthRequest="320"
            HeightRequest="170"
            BackgroundColor="#828282"
            Margin="0,10,0,0">
            <Label Text="Selecciona turno de trabajo"
                       TextColor="White"
                       Margin="22,10,0,0"
                       />
            <Picker
                        x:Name="WorkGroupSelector"
                        BackgroundColor="Black"
                        TextColor="White"
                        WidthRequest="300"
                        HorizontalOptions="Center"/>
            <Label Text="Selecciona zona"
                       TextColor="White"
                       Margin="22,0,0,0"/>
            <Picker
                        x:Name="WorkShiftSelector"
                        BackgroundColor="Black"
                        TextColor="White"
                        WidthRequest="300"
                        HorizontalOptions="Center"/>

            <Button
                            x:Name="RegisterButton"
                            Text="Registrar"
                            Clicked="BotonRegistrar_Clicked"
                            Margin="0,10,0,0"
                            WidthRequest="300"
                            HorizontalOptions="Center"/>
            <Button
                            x:Name="UpdateButton"
                            Text="Eliminar"
                            Clicked="BotonActualizar_Clicked"
                            Margin="0,10,0,0"
                            WidthRequest="300"
                            HorizontalOptions="Center"/>
        </StackLayout>
        <StackLayout>
            <Button
                x:Name="BackButton"
                Text="Volver"
                WidthRequest="200"
                HeightRequest="35"
                HorizontalOptions="Center"
                Margin="0,20,0,0"
                Clicked="BotonVolver_Clicked"/>
        </StackLayout>

    </StackLayout>
</ContentPage>